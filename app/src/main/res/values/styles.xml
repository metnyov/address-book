<resources>

    <style name="Theme.App" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_variant</item>
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorOnSurface">@color/greyish_purple</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>

        <item name="materialButtonStyle">@style/Widget.App.MaterialButton</item>
        <item name="textInputStyle">@style/Widget.App.TextInputLayout</item>
    </style>

    <style name="Theme.App.Launcher" parent="Theme.App.Base">
        <item name="android:windowBackground">@color/violet_blue</item>
    </style>

    <style name="Theme.App.Base">
        <item name="android:windowBackground">@color/background</item>
    </style>

    <style name="Widget.App.MaterialButton" parent="Widget.MaterialComponents.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="rippleColor">@color/greyish_purple</item>
    </style>

    <style name="Widget.App.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox" />

</resources>